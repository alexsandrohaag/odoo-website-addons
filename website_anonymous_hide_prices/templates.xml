        <template id="custom_br_website_sale_address" inherit_id="br_website_sale.br_website_sale_address">
            <xpath expr="//input[@id='radioCompany']" position="replace">
                <input type="radio" name="company_type" id="radioCompany" value="company" t-att-checked="'company_type' in checkout and checkout['company_type'] == 'company'" onchange="Array.from(document.querySelectorAll('label')).find(el =&gt; el.textContent === 'CPF').textContent = 'CNPJ';"/> Pessoa Jur√≠dica
            </xpath>
            <xpath expr="//input[@id='radioPerson']" position="replace">
                <input type="radio" name="company_type" id="radioPerson" value="person" t-att-checked="'company_type' in checkout and checkout['company_type'] == 'person'" onchange="Array.from(document.querySelectorAll('label')).find(el =&gt; el.textContent === 'CNPJ').textContent = 'CPF';"/> Pessoa F√≠sica
