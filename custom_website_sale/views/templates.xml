<openerp>
    <data>
        <template id="custom_cart_lines" inherit_id="website_sale.cart_lines">
            <xpath expr="//th[@class='text-center td-price']" position="replace">
                <th t-if="not user_id.partner_id.name == 'Public user'" class="text-center td-price">Preço</th>
            </xpath>
            <xpath expr="//td[@class='text-center td-price']" position="replace">
                <td t-if="not user_id.partner_id.name == 'Public user'" class="text-center td-price" name="price">
                    <t t-if="(compute_currency(line.product_id.lst_price) - line.price_reduce ) &gt; 0.01  and website.get_current_pricelist().discount_policy=='without_discount'">
                        <del t-attf-class="#{'text-danger mr8'}" style="white-space: nowrap;" t-esc="compute_currency(line.product_id.website_public_price)" t-options="{'widget': 'monetary', 'display_currency': website.get_current_pricelist().currency_id, 'from_currency': website.currency_id}"/>
                    </t>
                    <span t-field="line.price_reduce_taxexcl" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" groups="sale.group_show_price_subtotal"/>
                    <span t-field="line.price_reduce_taxinc" style="white-space: nowrap;" t-options="{'widget': 'monetary', 'from_currency': website_sale_order.pricelist_id.currency_id, 'display_currency': website.currency_id}" groups="sale.group_show_price_total"/>
                </td>
            </xpath>
            <xpath expr="//div[@class='js_cart_lines row']" position="replace">
                <div t-if="not user_id.partner_id.name == 'Public user'" class="js_cart_lines row">
                    <t t-call="website_sale.total">
                        <t t-set="extra_class" t-value="&quot;col-xs-12 col-sm-5 col-sm-push-7&quot;"/>
                        <t t-set="redirect">/shop/cart</t>
                    </t>
                </div>
            </xpath>
        </template>
        <template id="custom_address" inherit_id="br_website_sale.br_website_sale_address">
            <xpath expr="//form" position="replace">
                <form name="/shop/checkout" position="replace">
                    <form name="/shop/checkout" method="post" class="checkout_autoformat">
                        <div class="form-group col-lg-12" style="margin-bottom: 0px;">
                            <label class="control-label" for="person_type">Tipo de Pessoa</label>
                        </div>
                        <div t-attf-class="radio #{error.get('company_type') and 'has-error' or ''} col-lg-12">
                            <div t-if="'company_type' not in checkout" class="col-xs-6 col-sm-3">
                                <input type="radio" name="company_type" id="radioCompany" value="company" t-att-checked="true"
                                       onchange="Array.from(document.querySelectorAll('label')).find(el =&gt; el.textContent === 'CPF').textContent = 'CNPJ';"/> Pessoa Jurídica
                            </div>
                            <div t-else="" class="col-xs-6 col-sm-3">
                                <input type="radio" name="company_type" id="radioCompany" value="company" t-att-checked="'company_type' in checkout and checkout['company_type'] == 'company'"
                                       onchange="Array.from(document.querySelectorAll('label')).find(el =&gt; el.textContent === 'CPF').textContent = 'CNPJ';"/> Pessoa Jurídica
                            </div>
                            <div class="col-xs-6 col-sm-3">
                                <input type="radio" name="company_type" id="radioPerson" value="person" t-att-checked="'company_type' in checkout and checkout['company_type'] == 'person'" onchange="Array.from(document.querySelectorAll('label')).find(el =&gt; el.textContent === 'CNPJ').textContent = 'CPF';"/> Pessoa Física
                            </div>
                        </div>
                        <div t-attf-class="form-group #{error.get('name') and 'has-error' or ''} col-md-6 div_name">
                            <label class="control-label" for="name">Name</label>
                            <input type="text" name="name" class="form-control" t-att-value="'name' in checkout and checkout['name']"/>
                        </div>
                        <t t-if="mode[1] == 'billing'">
                            <div t-attf-class="form-group #{error.get('email') and 'has-error' or ''} col-md-6" id="div_email">
                                <label class="control-label" for="email">Email</label>
                                <input type="email" name="email" class="form-control" t-att-value="'email' in checkout and checkout['email']"/>
                            </div>
                        </t>
                        <div t-attf-class="form-group #{error.get('cnpj_cpf') and 'has-error' or ''} col-lg-6">
                            <label t-if="'company_type' not in checkout or 'company_type' in checkout and checkout['company_type'] == 'company'" class="control-label">CNPJ</label>
                            <label t-else="" class="control-label">CPF</label>
                            <input type="text" name="cnpj_cpf" class="form-control" t-att-value="'cnpj_cpf' in checkout and checkout['cnpj_cpf']"/>
                        </div>
                        <div t-attf-class="form-group #{error.get('phone') and 'has-error' or ''} col-md-6" id="div_phone">
                            <label class="control-label" for="phone">Telefone</label>
                            <input type="tel" name="phone" class="form-control" t-att-value="'phone' in checkout and checkout['phone']"/>
                        </div>
                        <div t-attf-class="form-group #{error.get('zip') and 'has-error' or ''} col-sm-5">
                            <label class="control-label" for="zip">CEP</label>
                            <input type="text" name="zip" class="form-control" t-att-value="'zip' in checkout and checkout['zip']"/>
                        </div>
                        <div class="form-group col-md-1 zip-search" style="margin-top: 25px; padding-left: 0px;">
                            <a id="btn_search_zip" class="btn btn-primary">
                                <span class="fa fa-search"/>
                            </a>
                        </div>
                        <div t-attf-class="form-group #{error.get('street') and 'has-error' or ''} col-lg-12">
                            <label class="control-label" for="street">Endereço</label>
                            <input type="text" name="street" class="form-control" t-att-value="'street' in checkout and checkout['street']"/>
                        </div>
                        <div t-attf-class="form-group #{error.get('number') and 'has-error' or ''} col-lg-6">
                            <label class="control-label" for="number">Número</label>
                            <input type="text" name="number" class="form-control" t-att-value="'number' in checkout and checkout['number']"/>
                        </div>
                        <div t-attf-class="form-group #{error.get('district') and 'has-error' or ''} col-lg-6">
                            <label class="control-label" for="district">Bairro</label>
                            <input type="text" name="district" class="form-control" t-att-value="'district' in checkout and checkout['district']"/>
                        </div>
                        <div t-attf-class="form-group #{error.get('street2') and 'has-error' or ''} col-lg-12">
                            <label class="control-label" for="street2">Complemento</label>
                            <input type="text" name="street2" class="form-control" t-att-value="'street2' in checkout and checkout['street2']"/>
                        </div>
                        <t t-set="default_country" t-value="request.env['res.country'].search([('name', '=', 'Brasil')])"/>
                        <div t-attf-class="form-group #{error.get('country_id') and 'has-error' or ''} col-md-6 div_country" style="display: none;">
                            <label class="control-label" for="country_id">País</label>
                            <select id="id_country" name="country_id" class="form-control">
                                <t t-foreach="countries.filtered(lambda x: x.id == default_country.id)" t-as="c">
                                    <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1)">
                                        <t t-esc="c.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div t-attf-class="form-group #{error.get('state_id') and 'has-error' or ''} col-lg-6">
                            <label class="control-label" for="state_id">Estado</label>
                            <input id="input_state_id" type="hidden" t-att-value="'state' in checkout and checkout['state_id']"/>
                            <select id="select_state_id" name="state_id" class="form-control">
                                <t t-foreach="request.env['res.country.state'].search([('country_id', '=', default_country.id)])" t-as="s">
                                    <option t-att-value="s.id" t-att-selected="s.id == ('state_id' in checkout and country and checkout['state_id'] != '' and int(checkout['state_id']))">
                                        <t t-esc="s.name"/>
                                    </option>
                                </t>
                            </select>
                        </div>
                        <div t-attf-class="form-group #{error.get('city_id') and 'has-error' or ''} col-lg-6">
                            <label class="control-label" for="city_id">Cidade</label>
                            <input id="input_city_id" type="hidden" t-att-value="city"/>
                            <select id="select_city_id" name="city_id" class="form-control">
                                <option value="">Cidade...</option>
                            </select>
                        </div>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <input type="hidden" name="submitted" value="1"/>
                        <input type="hidden" name="partner_id" t-att-value="partner_id or '0'"/>
                        <input type="hidden" name="callback" t-att-value="callback"/>
                        <input type="hidden" name="field_required" t-att-value="mode[1] == 'billing' and 'phone,name' or ''"/>

                        <div class="clearfix"/>
                        <div>
                            <a t-att-href="mode == ('new', 'billing') and '/shop/cart' or '/shop/checkout'" class="btn btn-default mb32">
                                <span class="fa fa-long-arrow-left"/> Voltar
                            </a>
                            <a class="btn btn-default btn-primary pull-right mb32 a-submit">
                                <span>Continuar </span><span class="fa fa-long-arrow-right"/>
                            </a>
                        </div>
                    </form>
                </form>
            </xpath>
        </template>
    </data>
</openerp>
