<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="website.register" name="Register">
        <t t-call="website.layout">
            <div id="wrap">
            <div class="oe_structure">
            <div class="container">
                <h1>Cadastre-se para começar a comprar.</h1>
                
                <form action="/website_form/" method="post" 
                        class="s_website_form form-horizontal container-fluid mt32" 
                        enctype="multipart/form-data"
                        data-model_name="crm.lead" 
                        data-success_page="/page/website_crm.contactus_thanks">
                    
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="contact_name">Nome</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="contact_name" t-att-value="request.params.get('contact_name', '')" required=""/>
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="partner_name">Empresa</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="partner_name" required="" t-att-value="request.params.get('partner_name', '')" />
                        </div>
                    </div>
                    
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="cnpj">CNPJ</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="cnpj" required="" t-att-value="request.params.get('cnpj', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="inscr_est">Inscrição Estadual</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="inscr_est" required="" t-att-value="request.params.get('inscr_est', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="street">Rua</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="street" required="" t-att-value="request.params.get('street', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="number">Número</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="number" required="" t-att-value="request.params.get('number', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="street2">Complemento</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="street2" required="" t-att-value="request.params.get('street2', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="district">Bairro</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="district" required="" t-att-value="request.params.get('district', '')" />
                        </div>
                    </div>
                    
                    
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="city">Cidade</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="city" required="" t-att-value="request.params.get('city', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="state">Estado</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="state" required="" t-att-value="request.params.get('state', '')" />
                        </div>
                    </div>
                
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="country">País</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="country" required="" t-att-value="request.params.get('country', '')" />
                        </div>
                    </div>
                    
                    <!---->
                    <t t-set="var_country_id" t-value="0"/>
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="country_id">Country</label>
                        <select id="country_id" name="country_id" class="form-control o_website_form_input">
                            <option value="">Select country...</option>
                                <t t-foreach="countries" t-as="c">
                                    <option t-att-value="c.id" t-att-selected="c.id == (country and country.id or -1)">
                                        <t t-esc="c.name"/>
                                        <t t-set="var_country_id" t-value="c.id == (country and country.id)"/>
                                    </option>                          
                                </t>
                        </select>
                    </div>
                
                    <!---->
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="state_id">State</label>
                        <select id="state_id" name="state_id" class="form-control o_website_form_input">
                            <option value="">Select state...</option>
                                <!--
                                <t t-foreach="states" t-as="s">
                                -->
                                <t t-foreach="states" t-as="s">
                                    <option t-att-value="s.id" t-att-selected="s.id == var_country_id">
                                        <t t-esc="s.name"/>
                                        
                                        <p t-if="s.country_id.id == var_country_id">
                                            <t t-esc="s.name"/>
                                        </p>
                                        
                                    </option>                          
                                </t>
                        </select>
                    </div>
                    <!--
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="state_id">Country</label>
                        <select id="state_id" name="state_id" class="form-control o_website_form_input">
                            <option value="">Select state...</option>
                                <t t-foreach="country.state_ids" t-as="s">
                                    <option t-att-value="s.id" t-att-selected="s.id == country">
                                        <t t-esc="s.name"/>
                                    </option>                          
                                </t>
                        </select>
                    </div>
                    -->
                    <!---->
                    <div class="form-group form-field">
                        <label class="col-md-3 col-sm-4 control-label" for="phone">Telefone</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="phone" t-att-value="request.params.get('phone', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="email_from">Email</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="email_from" required="" t-att-value="request.params.get('email_from', '')" />
                        </div>
                    </div>
                    
                    <div class="form-group form-field o_website_form_required">
                        <label class="col-md-3 col-sm-4 control-label" for="name">Assunto</label>
                        <div class="col-md-7 col-sm-8">
                            <input type="text" class="form-control o_website_form_input" name="name" required="" t-att-value="request.params.get('name', '')" />
                        </div>
                    </div>  
                    
                    <div class="form-group form-field o_website_form_required_custom">
                        <label class="col-md-3 col-sm-4 control-label" for="description">Dúvidas</label>
                        <div class="col-md-7 col-sm-8">
                            <textarea class="form-control o_website_form_input" name="description" required=""><t t-esc="request.params.get('description', '')"/></textarea>
                        </div>
                    </div>
                    
                    <t t-foreach="kwargs" t-as="kwarg">
                        <input type="hidden" t-att-name="kwarg[0]" t-att-value="kwarg[1]"/>
                    </t>
                    
                    <div class="form-group">
                        <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                            <span class="btn btn-primary btn-lg o_website_form_send">Send</span>
                            <span id="o_website_form_result"></span>
                        </div>
                    </div>
                </form>
            </div>
            </div>
            </div>
        </t>      
    </template>
</odoo>